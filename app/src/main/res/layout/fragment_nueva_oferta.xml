<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentNuevaOferta">

    <View
        android:id="@+id/_bg__creador_de_nueva_oferta_ek2"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/_bg__creador_de_nueva_oferta_ek2_shape" />

    <View
        android:id="@+id/VwVista"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginTop="222dp"
        android:background="@drawable/rectangle_7_shape"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_6_ek4" />

    <View
        android:id="@+id/rectangle_6_ek4"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@drawable/rectangle_6_ek4_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_6_ek2"
        android:layout_width="68dp"
        android:layout_height="63dp"
        android:layout_marginEnd="120dp"
        android:contentDescription="image_6_ek2"
        android:src="@drawable/image_6_ek2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/_avatar_1_ek2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle_6_ek4"
        app:layout_constraintVertical_bias="0.47" />

    <ImageView
        android:id="@+id/_avatar_1_ek2"
        android:layout_width="61dp"
        android:layout_height="64dp"
        android:contentDescription="_avatar_1_ek2"
        android:src="@drawable/_avatar_1_ek2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/_image_5_ek3"
        app:layout_constraintStart_toStartOf="@id/image_6_ek2"
        app:layout_constraintTop_toTopOf="@+id/rectangle_6_ek4" />

    <ImageView
        android:id="@+id/_image_5_ek3"
        android:layout_width="68dp"
        android:layout_height="63dp"
        android:layout_marginStart="300dp"
        android:contentDescription="_image_5_ek3"
        android:src="@drawable/_image_5_ek3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle_6_ek4" />


    <TextView
        android:id="@+id/nueva_oferta"
        android:layout_width="367dp"
        android:layout_height="94dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Nueva Oferta"
        android:textColor="@color/vista_de_respuestas_color"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etInfo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/VwVista" />

    <EditText
        android:id="@+id/etInfo2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/VwVista" />

    <EditText
        android:id="@+id/etInfo3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/VwVista" />

    <EditText
        android:id="@+id/etInfo4"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/VwVista" />

    <EditText
        android:id="@+id/etInfo5"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/VwVista" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCrear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:background="@drawable/rectangle_3_ek3_shape"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_6_ek4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>