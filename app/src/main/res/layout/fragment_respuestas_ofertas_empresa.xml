<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RespuestasDeEmpresa">

    <View
        android:id="@+id/_bg__solicitudes_de_empleado_ek2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/_bg__solicitudes_de_empleado_ek2_shape" />

    <TextView
        android:id="@+id/tvRespuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bandeja de Respuestas"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:layout_marginTop="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/rectangle_6_ek4"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@drawable/rectangle_6_ek4_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/IvInicio"
        android:layout_width="68dp"
        android:layout_height="63dp"
        android:src="@drawable/image_6_ek2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/IvMail"
        app:layout_constraintStart_toStartOf="@id/IvPersona"
        app:layout_constraintTop_toTopOf="@+id/rectangle_6_ek4"
        />

    <ImageView
        android:id="@+id/IvPersona"
        android:layout_width="61dp"
        android:layout_height="64dp"
        android:src="@drawable/_avatar_1_ek2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle_6_ek4"
        android:layout_marginStart="30dp"/>

    <ImageView
        android:id="@+id/IvMail"
        android:layout_width="68dp"
        android:layout_height="63dp"
        android:layout_marginStart="300dp"
        android:src="@drawable/_image_5_ek3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle_6_ek4" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvSolicitudes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>